{
  "name": "@grafana/azure-sdk-react",
  "version": "0.0.1",
  "description": "Common Azure features for Grafana",
  "main": "index.js",
  "scripts": {
    "dev": "watch 'npm run bundle' ./src",
    "build": "yarn clean && yarn typecheck && yarn bundle",
    "bundle": "rollup -c rollup.config.ts",
    "clean": "rimraf ./dist ./compiled",
    "typecheck": "tsc --noEmit",
    "publish": "npm publish  --access=public --scope=grafana",
    "test": "jest --notify --watch",
    "postinstall": "yarn build"
  },
  "files": [
    "index.js",
    "dist"
  ],
  "repository": "github:grafana/grafana-azure-sdk-react",
  "author": "Grafana Labs <team@grafana.com> (https://grafana.com)",
  "license": "Apache-2.0",
  "dependencies": {
    "ts-jest": "26.4.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@grafana/data": "^7.5.0",
    "@grafana/toolkit": "^7.5.1",
    "@grafana/tsconfig": "^1.0.0-rc1",
    "@grafana/ui": "^9.1.8",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-json": "4.0.3",
    "@rollup/plugin-node-resolve": "7.1.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "@types/jest": "23.3.14",
    "@types/react": "16.8.16",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "react": "17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "2.0.6",
    "rollup-plugin-sourcemaps": "0.5.0",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-visualizer": "3.3.1",
    "typescript": "4.3.4"
  }
}
